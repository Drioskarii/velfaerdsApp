<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".emailPage"
    android:background="@drawable/gradient_background">
        <LinearLayout
            android:id="@+id/emailPlacer"
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:background="@drawable/addemail"
                android:gravity="center"
                android:onClick="addEmail" />
        </LinearLayout>





    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="599dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:onClick="back"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="69dp"
            tools:layout_editor_absoluteY="524dp" />

        <Button
            android:id="@+id/sendMail"
            android:layout_width="89dp"
            android:layout_height="79dp"
            android:layout_margin="20dp"
            android:background="@drawable/sendmail"
            android:onClick="sendMail"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="219dp"
            tools:layout_editor_absoluteY="524dp" />

    </LinearLayout>


</LinearLayout>