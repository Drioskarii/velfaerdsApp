<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".selectPage"
    android:background="@drawable/gradient_background">


    <RelativeLayout
        android:id="@+id/goodRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_margin="4dp"
        tools:ignore="MissingConstraints">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewGood"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutCustomAvatar"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp"
            android:orientation="horizontal">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

<RelativeLayout
    android:id="@+id/picLayout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:layout_constraintTop_toBottomOf="@id/goodRelativeLayout"/>

    <RelativeLayout
        android:id="@+id/badRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/picLayout">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBad"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp"
            android:orientation="horizontal">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/badRelativeLayout">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:onClick="back"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="619dp"
            android:layout_margin="20dp" />

        <Button
            android:id="@+id/btnnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_arrow_forward_24"
            android:onClick="forward"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="279dp"
            tools:layout_editor_absoluteY="619dp"
            android:layout_margin="20dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>