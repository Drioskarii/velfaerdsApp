<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".selectPage"
    android:background="@drawable/gradient_background">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:textSize="38sp"
            android:textColor="@color/white"

            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="Vælg De Vigtigste"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@color/black"
            android:shadowDx="2"

            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="Vælg de 5 vigtigste svar"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>
    <LinearLayout

        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Højeste svar"

            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:textColor="@color/white"/>

        <View style="@style/Divider"
            android:id="@+id/topScore"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewGood"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutCustomAvatar"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp"
            android:orientation="horizontal">
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bottom Score"

            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:textColor="@color/white"/>

        <View style="@style/Divider"
            android:id="@+id/bottomScore"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBad"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutCustomAvatar"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp"
            android:orientation="horizontal">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</LinearLayout>
