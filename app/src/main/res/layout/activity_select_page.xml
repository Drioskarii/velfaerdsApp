<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".selectPage"
    android:background="@drawable/gradient_background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/goodRelativeLayout"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"
        tools:ignore="MissingConstraints">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selectRecyclerGood"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:padding="4dp"
                android:scrollbars="vertical"
                android:background="@drawable/gradient_background"/>
    </RelativeLayout>

<RelativeLayout
    android:id="@+id/picLayout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:layout_constraintTop_toBottomOf="@id/goodRelativeLayout"/>

    <RelativeLayout
        android:id="@+id/badRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/picLayout">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/selectRecyclerBad"
            android:layout_width="match_parent"
            android:layout_height="310dip"
            android:padding="4dp"
            android:scrollbars="vertical"
            android:background="@drawable/gradient_background"/>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="604dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:onClick="back"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="619dp"
            android:layout_margin="20dp" />

        <Button
            android:id="@+id/btnnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_arrow_forward_24"
            android:onClick="forward"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="279dp"
            tools:layout_editor_absoluteY="619dp"
            android:layout_margin="20dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>