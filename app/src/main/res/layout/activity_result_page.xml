<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/Resultpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        tools:context=".ResultPage">

        <TextView
            android:id="@+id/txtResultDinAvatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Din Avatar"
            android:textAlignment="center"
            android:textColor="@color/designBlue"
            android:textSize="32sp" />


        <ImageView
            android:id="@+id/characterPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Styrker"
            android:textColor="@color/designBlue"/>

        <View
            android:id="@+id/topScore"
            style="@style/Divider"/>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewGood"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:textColor="@color/designBlue"/>
        <View
            style="@style/Divider"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Svaghed"
            android:textColor="@color/designBlue"/>
        <View
            style="@style/Divider"
            android:layout_marginBottom="5dp" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBad"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:textColor="@color/designBlue"/>

        <View
            style="@style/Divider"
            android:layout_marginBottom="5dp" />


    </LinearLayout>

</LinearLayout>