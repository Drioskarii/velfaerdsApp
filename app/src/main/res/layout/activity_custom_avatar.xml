<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".customAvatar"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    >

    <LinearLayout
        android:id="@+id/layoutCustomAvatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@drawable/titlebar_gradient_background"
        >

        <TextView
            android:id="@+id/txtCustomAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom Avatar"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/layoutCustomAvatar"
        tools:layout_editor_absoluteX="0dp"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/characterPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="240dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:onClick="back"
            >
        </Button>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/ic_baseline_arrow_forward_24"
            android:onClick="forward" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>