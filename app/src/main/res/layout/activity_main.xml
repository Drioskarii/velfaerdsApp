<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layoutTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <!-- @string values til activity_main findes under  res > values > mainActivityStrings.xml -->
        <TextView
            android:id="@+id/txtForside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtForside_text"
            android:textColor="@color/designBlue"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLogos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutTitleBar">

        <ImageView
            android:id="@+id/imgLogoVfvoe"
            android:layout_width="300sp"
            android:layout_height="100sp"
            android:contentDescription="@string/imgLogoVfVOE_contentDescription"
            android:onClick="logoClicked"
            android:src="@drawable/logo_vfvoe" />
        <View style="@style/Divider" />
        <ImageView
            android:id="@+id/imgLogoTec"
            android:layout_width="300sp"
            android:layout_height="100sp"
            android:layout_marginTop="50sp"
            android:contentDescription="@string/imgLogoTec_contentDescription"
            android:onClick="logoClicked"
            android:src="@drawable/logo_tec" />
        <View style="@style/Divider" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutTutorial"
        android:animateLayoutChanges="true"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000">

        <TextView
            android:id="@+id/txtTutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="40dp"
            android:text="De hvide streger indikere, hvor du kan slide!"
            android:textSize="30sp" />

        <RelativeLayout
            android:id="@+id/swipeLeftView"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:layout_margin="5dp"
            ></RelativeLayout>

        <RelativeLayout
            android:id="@+id/swipeRightView"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@color/white"
            android:layout_margin="5dp"
            ></RelativeLayout>

        <TextView
            android:id="@+id/txtSwipeLeft"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_marginTop="450dp"
            android:layout_marginStart="50dp"
            android:fontFamily="sans-serif"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="Swipe mod højre for at se de 24 styrker"
            android:textColor="@color/white"
            android:textSize="17sp"></TextView>

        <TextView
            android:id="@+id/txtSwipeRight"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:textAlignment="center"
            android:layout_marginTop="450dp"
            android:layout_marginEnd="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="sans-serif"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="Swipe mod venstre for at fortsætte"
            android:textColor="@color/white"
            android:textSize="17sp"></TextView>

        <ImageView
            android:id="@+id/imgSwipeBackward"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_below="@+id/txtSwipeLeft"
            android:layout_alignParentStart="true"
            android:layout_marginStart="75dp"
            android:contentDescription="@string/SwipeBackward_contentDescription"
            android:src="@drawable/swipebackward"></ImageView>

        <ImageView
            android:id="@+id/imgSwipeForward"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_below="@+id/txtSwipeRight"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="75dp"
            android:contentDescription="@string/SwipeForward_contentDescription"
            android:src="@drawable/swipeforward"></ImageView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>