<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"

    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forside"
        android:textSize="50sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="16dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="430dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="113dp">

        <ImageView
            android:id="@+id/imgLogoTec"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_tec"
            android:contentDescription="TEC"
            android:onClick="logoClicked"
            />

        <ImageView
            android:id="@+id/imgLogoVfvoe"
            android:layout_width="350dp"
            android:layout_height="130dp"
            android:src="@drawable/logo_vfvoe"
            android:contentDescription="Videnscenter for Velfærdsteknologi OEst"
            android:onClick="logoClicked"
            />

        <ImageView
            android:id="@+id/imgLogoMindhelper"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_mindhelper"
            android:contentDescription="Mindhelper"
            android:onClick="logoClicked"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="604dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnstrenghts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:onClick="strenghts"
            android:text="De 24 styrker"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="237dp">
        </Button>

        <Button
            android:id="@+id/btnnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:onClick="forward"
            android:text="Gå videre til Spørgsmål"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="233dp">
        </Button>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>