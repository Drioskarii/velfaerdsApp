<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/questionsPageView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuestionsPage"
    android:background="@drawable/gradient_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/de_24_sp_rgsm_l"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3">
        </TextView>

        <FrameLayout
            android:id="@+id/videoFrame"
            android:layout_width="360dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/characterHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/placeholder">
            </ImageView>
        </FrameLayout>

        <ProgressBar
            android:id="@+id/questionsProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="26dp"
            android:layout_marginLeft="26dp">
        </ProgressBar>

        <ListView
            android:id="@+id/listOfQuestions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/transparent"
            android:dividerHeight="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">
        </ListView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View style="@style/Divider" />

            <TextView
                android:id="@+id/txtTrophy"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="TrofÃ¦er"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3">
            </TextView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/trophyMod"
                        android:visibility="gone"
                        android:background="@drawable/iconmod"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"/>
                    <ImageView
                        android:id="@+id/trophyNys"
                        android:visibility="gone"
                        android:background="@drawable/iconnysgerrig"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"/>
                    <ImageView
                        android:id="@+id/trophyBes"
                        android:visibility="gone"
                        android:background="@drawable/iconbeskedenhed"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"/>
                    <ImageView
                        android:id="@+id/trophyTak"
                        android:visibility="gone"
                        android:background="@drawable/icontaknemmelighed"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"/>
                    <ImageView
                        android:id="@+id/trophySam"
                        android:visibility="gone"
                        android:background="@drawable/iconsamarbejde"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"/>
                    <ImageView
                        android:id="@+id/trophySoc"
                        android:visibility="gone"
                        android:background="@drawable/iconsocialintelligens"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>