<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".The24Strengths"
    android:background="@color/white"
    android:paddingTop="15dp"
    android:paddingRight="25dp"
    android:paddingLeft="25dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingBottom="24dp">

<ImageButton
    android:layout_width="65dp"
    android:layout_height="65dp"
    android:onClick="modClick"
    android:background="@drawable/iconmod" />

<ImageButton
    android:layout_width="65dp"
    android:layout_height="65dp"
    android:onClick="nysClick"
    android:background="@drawable/iconnysgerrig"/>

<ImageButton
    android:layout_width="65dp"
    android:layout_height="65dp"
    android:onClick="besClick"
    android:background="@drawable/iconbeskedenhed"/>

<ImageButton
    android:layout_width="65dp"
    android:layout_height="65dp"
    android:onClick="takClick"
    android:background="@drawable/icontaknemmelighed"/>

<ImageButton
    android:layout_width="65dp"
    android:layout_height="65dp"
    android:onClick="samClick"
    android:background="@drawable/iconsamarbejde"/>

<ImageButton
    android:layout_width="65dp"
    android:layout_height="65dp"
    android:onClick="socClick"
    android:background="@drawable/iconsocialintelligens"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
        <ImageView
            android:id="@+id/selectedListImage"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:background="@drawable/iconmod"/>
</LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <ListView
                    android:id="@+id/listView"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">
                </ListView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <Button
                                    android:id="@+id/btn_the24strengths_back"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:background="@color/designWhite"
                                    android:text="Tilbage"
                                    android:textColor="@color/designBlue"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
        </LinearLayout>
</LinearLayout>